<% if listing.errors.any? %>
  <div class="errors">
    <% listing.errors.full_messages.each do |error| %>
      <p><%= error %></p>
    <% end %>
  </div>
<% end %>

<div class="sign-in-container h-full pt-10 lg:pt-20">
  <div class='w-full max-w-lg lg:bg-white lg:shadow-lg rounded px-8 pt-6 pb-8 mb-4'>
    <%= form_with model: listing, local: true, class: "w-full max-w-sm" do |form| %>
      <div class="lg:flex lg:items-center mb-6">
        <div class="lg:w-1/3">
          <%= form.label :title, class: "block text-gray-500 font-bold lg:text-right mb-1 lg:mb-0 pr-4" %>
        </div>
        <div class="lg:w-2/3">
          <%= form.text_field :title, value: listing.title, class: "bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-orange-700" %>
        </div>
      </div>

      <div class="lg:flex lg:items-center mb-6">
        <div class="lg:w-1/3">
          <%= form.label :description, class: "block text-gray-500 font-bold lg:text-right mb-1 lg:mb-0 pr-4" %>
        </div>
        <div class="lg:w-2/3">
          <%= form.text_area :description, value: listing.description, class: "bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-orange-700" %>
        </div>
      </div>

      <div class="lg:flex lg:items-center mb-6">
        <div class="lg:w-1/3">
          <%= form.label :price, class: "block text-gray-500 font-bold lg:text-right mb-1 lg:mb-0 pr-4" %>
        </div>
        <div class="lg:w-2/3">
          <%= form.number_field :price, min: 0, value: listing.price, class: "bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-orange-700" %>
        </div>
      </div>

      <div class="lg:flex lg:items-center mb-6">
        <div class="lg:w-1/3">
          <%= form.label :size, class: "block text-gray-500 font-bold lg:text-right mb-1 lg:mb-0 pr-4" %>
        </div>
        <div>
          <%= form.select :size, [["Small", "Small"], ["Medium", "Medium"], ["Large", "Large"]] %>
        </div>
      </div>

      <div class="lg:flex lg:items-center mb-6">
        <div class="lg:w-1/3 lg:text-right lg:pr-2">
          <%= form.label :in_stock, "In Stock?", class: "lg:w-2/3 block text-gray-500 font-bold inline " %>           
        </div>
        <div class="lg:w-2/3">
          <%= form.check_box :in_stock, class: "lg:ml-2 leading-tight", checked: true %>
        </div>
      </div>

      <div class="lg:flex lg:items-center mb-6">
        <div class="lg:w-1/3">
          <%= form.label :picture, class: "block text-gray-500 font-bold lg:text-right mb-1 lg:mb-0 pr-4" %>
        </div>
        <div class="lg:w-2/3">
          <%= form.file_field :picture, accept: "image/png,image/gif,image/jpeg,image/jpg", class: "w-full bg-gray-200 p-2 border-2 border-gray-200 rounded" %>
        </div>
      </div>

      <div class="lg:flex lg:justify-center">
        <%= form.submit class: "shadow bg-orange-800 hover:bg-orange-900 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" %>
      </div>

    <% end %>
</div>


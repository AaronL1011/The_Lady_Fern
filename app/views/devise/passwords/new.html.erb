<h2 class="text-center pt-10 text-3xl text-orange-900">Forgot your password?</h2>
<div class="sign-in-container h-full pt-10 lg:pt-12">
  <div class='w-full max-w-sm lg:bg-white lg:shadow-lg rounded px-8 pt-6 pb-8 mb-4'>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-6">
        <%= f.label :email, class:"block text-gray-700 text-sm font-bold" %><br />
        <%= f.email_field :email, autocomplete: "email", placeholder:"janedoe@email.com", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-4">
        <%= f.submit "Send me reset password instructions", class: "w-full bg-orange-800 hover:bg-orange-900 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    <% end %>
     <div class="flex justify-between mt-2">
    <%= render "devise/shared/links" %>
  </div>
  </div>
</div>

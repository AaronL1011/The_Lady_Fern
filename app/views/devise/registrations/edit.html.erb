<h1 class="text-center pt-10 text-3xl text-orange-900">Edit <%= resource_name.to_s.humanize %></h1>
<div class="sign-in-container h-full pt-10 lg:pt-12">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="mb-4">
        <%= f.label :name, class:"block text-gray-700 text-sm font-bold" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder:"Jane Doe", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-4">
        <%= f.label :email, class:"block text-gray-700 text-sm font-bold" %><br />
        <%= f.email_field :email, autocomplete: "email", placeholder:"janedoe@email.com", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="mb-4">
      <%= f.label :password, class: "inline text-gray-700 text-sm font-bold" %>
      <% if @minimum_password_length %>
      <em class="text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "current-password", placeholder:"************", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 my-3 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, class: "inline text-gray-700 text-sm font-bold" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 my-3 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-4">
      <%= f.label :shipping_address, class: "inline text-gray-700 text-sm font-bold" %><br />
      <%= f.text_field :shipping_address, autocomplete: "street-address", placeholder:"42 Nice St, Hamilton NSW", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 my-3 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="lg:flex lg:items-center mb-6">
        <%= f.label :picture, class: "inline text-gray-700 text-sm font-bold mr-4" %>
        <%= f.file_field :picture, accept: "image/png,image/gif,image/jpeg,image/jpg", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 bg-white my-3 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-4">
      <%= f.label :phone_number, class: "inline text-gray-700 text-sm font-bold" %><br />
      <%= f.telephone_field :phone_number, autocomplete: "tel", placeholder:"04XX XXX XXX", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 my-3 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="field">
      <%= f.label :current_password, class: "inline text-gray-700 text-sm font-bold" %> <em class="text-gray-500">(we need your current password to confirm your changes)</em><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 my-3 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="actions">
      <%= f.submit "Update", class: "w-full bg-orange-800 hover:bg-orange-900 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>
  <% end %>
</div>
<div class="flex justify-center mt-4 mb-10">
  <%= button_to "Cancel my account", registration_path( resource_name ), data: { confirm: "Are you sure?" }, method: :delete, class: "mr-5 underline" %>
  <%= link_to "Back", :back, class: "mr-5 underline" %>
</div>


